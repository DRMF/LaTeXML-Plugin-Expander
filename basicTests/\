#echo cshrc-alias; # set verbose echo # uncomment for debugging

# Aliases that are useful for everyone.  Avoid 1-letter aliases for clarity.


alias ab	answerbook
# alias b	'bx an'
alias cd        'chdir \!*'
alias clean     'rm #* *~ .*~ core* *.BAK *%'
alias count	'grep \!* | wc'
alias ff	'find . -name \!* -print'
alias mvdate	'mv \!* \!*.`date "+%Y%m%d"`'
alias ls  'ls -aFv'
alias ll		'ls -al'
alias lo 	logout
alias lpr       'lpr -s'
alias mail	'Mail'
alias mailq	'/usr/lib/sendmail -bp'
alias name	'ypcat passwd | cut -f1,4,5 -d: | grep -i "\!*"'
alias nold	'unsetenv LD_LIBRARY_PATH'
alias print	'pr -l66 \!* | lpr'
alias psrof	'psroff -man \!* | lpr'
alias psman	'tbl `whichman \!* | head -1` | tbl | eqn | troff -man -Tpost | /usr/lib/lp/postscript/dpost'
alias rof       'nroff -man \!* | m'
alias rot13     'tr a-zA-Z n-za-mN-ZA-M'
alias spell?    'grep ^\!^ /usr/dict/words | more'
alias tolower	'tr A-Z a-z'
alias toupper	'tr a-z A-Z'
alias tx	'textedit -Wh 35 \!* &'

